package org.powerhigh.utils;

public class Color {

	private int r, g, b, a;
	private boolean hasAlpha;
	
	public Color(int r, int g, int b) {
		this.r = r;
		this.g = g;
		this.b = b;
		this.hasAlpha = false;
	}
	
	public Color(int r, int g, int b, int a) {
		this.r = r;
		this.g = g;
		this.b = b;
		this.a = a;
		this.hasAlpha = true;
	}
	
	public int getRed() {
		return r;
	}
	
	public int getBlue() {
		return b;
	}
	
	public int getGreen() {
		return g;
	}
	
	public int getAlpha() {
		if (hasAlphaComponent())
			return a;
		return 255;
	}
	
	public boolean hasAlphaComponent() {
		return hasAlpha;
	}
	
}
